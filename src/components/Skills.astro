---
import presentation from "@/data/presentation";
---

<ul role="list" class="flex flex-row gap-2">
  {
    presentation.skills.map((skill, index) => (
      <>
        <li>
          <span
            class="iconify"
            data-icon={`cib:${skill.icon.toLowerCase()}`}
            data-inline="false"
          />
        </li>
      </>
    ))
  }
</ul>

<style>
  .iconify {
    font-size: 1.3rem;
    color: white;
  }
</style>
