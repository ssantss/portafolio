---

<section class="mt-8">
  <h2 class="mb-6 text-2xl font-bold text-neutral-100">Mi Actividad en GitLab</h2>
  <div
    class="rounded-md border border-neutral-700 p-6 bg-neutral-950"
    id="gitlab-calendar"
  ></div>
</section>

<script>
  import GitlabCalendar from "gitlab-calendar";

  document.addEventListener("DOMContentLoaded", () => {
    new GitlabCalendar("#gitlab-calendar", "ssantss", {
      cache: 1,
    });
  });
</script>

<style>
  :global(.gl-calendar-graph) {
    color: #ffffff;
  }

  :global(.gl-calendar-graph-text) {
    fill: #999999;
    font-size: 12px;
  }

  :global(.gl-calendar-graph rect) {
    stroke: #404040;
    stroke-width: 1px;
  }

  :global(.gl-calendar-graph .level-0) {
    fill: #1a1a1a;
  }

  :global(.gl-calendar-graph .level-1) {
    fill: #6366f1;
  }

  :global(.gl-calendar-graph .level-2) {
    fill: #4f46e5;
  }

  :global(.gl-calendar-graph .level-3) {
    fill: #4338ca;
  }

  :global(.gl-calendar-graph .level-4) {
    fill: #3730a3;
  }
</style>
