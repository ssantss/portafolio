---
import presentation from "@/data/presentation";
---

<ul role="list" class="flex flex-row gap-2">
  {
    presentation.socials.map((social, index) => (
      <>
        <li>
          <a href={social.link} class="icon-link" target="_blank">
            <span
              class="iconify"
              data-icon={`carbon:logo-${social.label.toLowerCase()}`}
              data-inline="false"
            />
          </a>
        </li>
      </>
    ))
  }
</ul>

<style>
  .icon-link .iconify {
    font-size: 1.3rem;
    color: white;
  }
</style>
